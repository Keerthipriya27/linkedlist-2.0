class Solution:
    def findSmallestInteger(self, nums: List[int], value: int) -> int:
        freq = Counter((x % value + value) % value for x in nums)
        mex = 0
        while True:
            remainder = mex % value
            if freq[remainder] > 0:
                freq[remainder] -= 1
                mex += 1
            else:
                return mex
